{
    // Python interpreter - MUST use conda environment
    "python.defaultInterpreterPath": "/home/austinli/miniconda3/envs/futures-roll/bin/python",
    
    // Terminal settings - automatically activate conda
    "python.terminal.activateEnvironment": true,
    "terminal.integrated.defaultProfile.linux": "bash",
    "python.terminal.activateEnvInCurrentTerminal": true,
    
    // Testing configuration
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests",
        "-v"
    ],
    
    // Linting and formatting
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    
    // Auto-complete and IntelliSense
    "python.analysis.extraPaths": [
        "./src"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    
    // File associations
    "files.associations": {
        "*.txt": "plaintext",
        "requirements*.txt": "pip-requirements"
    },
    
    // Exclude unnecessary files from explorer
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/*.egg-info": true,
        ".coverage": true
    },
    
    // Editor settings for Python
    "editor.rulers": [88, 120],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    
    // Git settings
    "git.ignoreLimitWarning": true
}
